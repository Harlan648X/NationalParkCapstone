@using Capstone.Web.Models

@model  ParkListModel

@{
    ViewBag.Title = "Park Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 id="detail_header">@Model.ParkName</h1>

<img id="detail_parkImage" src="~/Content/img/parks/@(Model.ParkCode).jpg" />

<table class="table">
   <tr>
       <td style="font-weight:bold">State</td>       
       <td> @Model.State</td>  
   </tr>
    <tr>
        <td style="font-weight:bold">Acerage</td>
        <td> @Model.Acreage</td>
    </tr>
    <tr>
        <td style="font-weight:bold">Elevation</td>
        <td> @Model.Elevation ft</td>
    </tr>
    <tr>
        <td style="font-weight:bold">Miles of Trail</td>
        <td> @Model.MilesOfTrail</td>
    </tr>
    <tr>
        <td style="font-weight:bold">Number of Campsites</td>
        <td> @Model.NumberOfCampsites</td>
    </tr>
    <tr>
        <td style="font-weight:bold">Climate</td>
        <td> @Model.Climate</td>
    </tr>
    <tr>
        <td style="font-weight:bold">Year Founded</td>
        <td> @Model.YearFounded</td>
    </tr>
    <tr>
        <td style="font-weight:bold">Annual Visitor Count</td>
        <td> @Model.AnnualVisitorCount</td>
    </tr>
    <tr>
        <td style="font-weight:bold">Quote</td>
        <td> @Model.InspirationalQuote</td>
    </tr>
    <tr>
        <td style="font-weight:bold">Quote Source</td>
        <td> @Model.InspirationalQuoteSource</td>
    </tr>
    <tr>
        <td style="font-weight:bold">Description</td>
        <td> @Model.ParkDescription</td>
    </tr>
    <tr>
        <td style="font-weight:bold">Entry Fee</td>
        <td> @Model.EntryFee</td>
    </tr>
    <tr>
        <td style="font-weight:bold">Number of Animal Species</td>
        <td> @Model.NumberOfAnimalSpecies</td>
    </tr>

</table>

<a href="@Url.Action("Weather", "Weather", new { id = @Model.ParkCode })">Click Here For Weather</a>